# File name: dmarcreport.kv
#: kivy 1.9.1

#
# Dmarc Report kvlang file for the visual part of Dmarc Report.
#
# Copyright 2016, Hans Åge Martinsen <hamartin@moshwire.com>
#

<DmarcReportNui>:
    fullscreen: True
    id: _dmreport

    BoxLayout:
        orientation: 'vertical'

        # Header.
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .25

            Label:
                size_hint: .5, 1
                text: 'Dmarc Report'
                font_size: '32sp'
                bold: True

            AnchorLayout:
                size_hint: .5, 1
                anchor_x: 'center'
                anchor_y: 'center'
                ImageButton:
                    id: _imagebutton
                    footer: _footer
                    model: _dmreport.model
                    reportb: _reportb
                    recordb: _recordb
                    policyb: _policyb
                    body: _body
                    size_hint: .2, .5
                    on_release: self.openfile()

        # Body.
        Body:
            id: _body
            bodydata: _bodydata
            model: root.model
            footer: _footer
            orientation: 'vertical'
            size_hint: 1, .65

            BodyButtons:
                id: _bodybuttons

                Button:
                    id: _reportb
                    text: 'Report Metadata'
                    disabled: True
                    on_release: _body.reload('report')
                Button:
                    id: _recordb
                    text: 'Record'
                    disabled: True
                    on_release: _body.reload('record')
                Button:
                    id: _policyb
                    text: 'Policy Reported'
                    disabled: True
                    on_release: _body.reload('policy')

            BodyData
                id: _bodydata

        # Footer.
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1

            Label:
                id: _footer
                text: 'Ready…'
                text_size: self.size
                halign: 'right'
                padding: '10sp', '10sp'
                markup: True

<OpenFile>:
    orientation: 'vertical'
    id: _openfile

    FileChooserIconView:
        id: _filechooser
        size_hint: 1, .9
        filter_dirs: False
        filters: ['*.[Xx][Mm][Ll]', '*.[Zz][Ii][Pp]', ]
        multiselect: False
        path: '~/'
        show_hidden: False

    BoxLayout:
        size_hint: 1, .1
        orientation: 'horizontal'
        spacing: '5sp'

        Button:
            text: 'Load file'
            on_release: _openfile.load(_filechooser.selection)
        Button:
            text: 'Cancel'
            on_release: _openfile.dismiss()

<BodyButtons@BoxLayout>:
    orientation: 'horizontal'
    spacing: '5sp'
    size_hint: 1, .1

<BodyData@BoxLayout>:
    size_hint: 1, .9
    orientation: 'vertical'

<GreyLabel@Label>:
    color: 211 / 255.0, 211 / 255.0, 211 / 255.0, .87

<DataLabel@GreyLabel>:
    text_size: self.size

<LabelL@DataLabel>:
    halign: 'left'

<LabelR@DataLabel>:
    halign: 'right'

<Policy>:

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: .5

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL
                        text: 'Domain'
                    LabelR:
                        text: root.pol_domain

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL:
                        text: 'Adkim'
                    LabelR:
                        text: root.pol_adkim

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL:
                        text: 'Aspf'
                    LabelR:
                        text: root.pol_aspf

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL:
                        text: 'Pct'
                    LabelR:
                        text: root.pol_pct

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL:
                        text: 'Sp'
                    LabelR:
                        text: root.pol_sp

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL:
                        text: 'P'
                    LabelR:
                        text: root.pol_p

<Record>:

    BoxLayout:
        orientation: 'horizontal'
        spacing: '35sp'
        padding: '10sp', '10sp', '10sp', '10sp'

        BoxLayout:
            orientation: 'vertical'

            Label:
                font_size: '20sp'
                text: '1. Row'

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'Source IP'
                LabelR:
                    text: root.rec_sourceip

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'Count'
                LabelR:
                    text: root.rec_count

            Label:
                font_size: '16sp'
                text: '1.1 Policy Evaluated'

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'Disposition'
                LabelR:
                    text: root.rec_disposition

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'DKIM'
                LabelR:
                    text: root.rec_ddkim

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'SPF'
                LabelR:
                    text: root.rec_dspf

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: '2. Identifiers'
                font_size: '20sp'

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'Header From'
                LabelR:
                    text: root.rec_headerfrom

            Label:
                text: '3. Auth Results'
                font_size: '20sp'

            Label:
                text: '3.1 SPF'
                font_size: '16sp'

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'Domain'
                LabelR:
                    text: root.rec_aspfdomain

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'Result'
                LabelR:
                    text: root.rec_aspfresult

            Label:
                text: '3.2 DKIM'
                font_size: '16sp'

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'Domain'
                LabelR:
                    text: root.rec_adkimdomain

            BoxLayout:
                orientation: 'horizontal'

                LabelL:
                    text: 'Result'
                LabelR:
                    text: root.rec_adkimresult

<Report>:

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            size_hint_x: .5
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL:
                        text: 'Org Name:'
                    LabelR:
                        text: root.rep_orgname

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL:
                        text: 'Email:'
                    LabelR:
                        text: root.rep_email

                LabelL:
                    text: 'Report ID:'

                LabelR:
                    text: root.rep_reportid

                Label:
                    font_size: '20sp'
                    text: '1. Date Range'

                BoxLayout:
                    orientation: 'horizontal'

                    LabelL:
                        text: '1.1 Begin: {0}'.format(root.rep_begin)
                    LabelR:
                        text: '1.2 End: {0}'.format(root.rep_end)
