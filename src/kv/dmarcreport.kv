# File name: dmarcreport.kv
#: kivy 1.9.1

# Override background colors in PageLayout since all Layouts are
# initially seethrough.
<Layout>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Body@GridLayout>:
    cols: 1
    rows: 2

<Page@AnchorLayout>:
    anchor_x: 'center'
    anchor_y: 'center'
    size_hint: 1, .9

<Footer@Label>:
    color: 211 / 255.0, 211 / 255.0, 211 / 255.0, .87
    size: self.size
    pos: self.pos
    halign: 'right'
    size_hint: 1, .1

# Two pages. Start at the first page.
<DmarcReportNui>:
    page: 0
    border: 120
    swipe_threshold: .4

    # First page.
    Body:

        Page:
            Label:
                font_size: 32
                markup: True
                text: '[b]Dmarc report[/b]'

        # Footer.
        Footer:
            text: 'Swipe left to load file'

    # Second page.
    Body:

        Page:
            Label:
                font_size: 32
                markup: True
                text: '[b]Load file[/b]'

        # Footer.
        Footer:
            text: 'Choose file to load'
