# File name: dmarcreport.kv
#: kivy 1.9.1

GridLayout:
    cols: 1
    rows: 3

    # Header
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        padding: 5, 5, 5, 5

        Label:
            text: 'Header'
            font_size: 32
            size_hint: .5, .7

    # Body
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'center'
        padding: 5, 5, 5, 5

        Label:
            text: 'Body'
            font_size: 32

    # Footer
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 5, 5, 5, 5

        Label:
            text: 'Footer'
            font_size: 32

